<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:thickness="10dp"
            android:dither="true"
            >
            <size
                android:height="100dp"
                android:width="100dp"
                />
            <gradient
                android:startColor="#40A1EC"
                android:endColor="#173A51"
                />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="5dp"
                />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>